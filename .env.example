# 闲鱼爬虫项目环境变量配置
# 复制此文件为 .env 并根据需要修改配置值

# ===================
# 数据库配置 (SQLite)
# ===================
# SQLite数据库文件路径（相对于项目根目录）
DATABASE_PATH=data/xianyu_spider.db

# 数据库连接池配置
DB_MAX_CONNECTIONS=20
DB_MIN_CONNECTIONS=1

# ===================
# 服务器配置
# ===================
# API服务器监听地址
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# 服务器运行模式（development/production）
ENVIRONMENT=development

# API文档配置
DOCS_URL=/docs
REDOC_URL=/redoc

# ===================
# 爬虫配置
# ===================
# 默认最大爬取页数
DEFAULT_MAX_PAGES=1

# 请求间隔时间（秒）
REQUEST_DELAY=1

# 浏览器配置
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000

# User-Agent配置
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# ===================
# 日志配置
# ===================
# 日志级别 (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE=data/xianyu_spider.log

# 是否启用文件日志
ENABLE_FILE_LOG=true

# 日志文件最大大小（MB）
LOG_MAX_SIZE=10

# 保留日志文件数量
LOG_BACKUP_COUNT=5

# ===================
# 数据清理配置
# ===================
# 自动清理历史数据（天）
DATA_RETENTION_DAYS=30

# 是否启用自动清理
ENABLE_AUTO_CLEANUP=false

# ===================
# 性能配置
# ===================
# 并发爬取任务数量限制
MAX_CONCURRENT_TASKS=5

# 数据库连接超时时间（秒）
DB_TIMEOUT=30

# API响应超时时间（秒）
API_TIMEOUT=60

# ===================
# 安全配置
# ===================
# API访问密钥（可选，用于鉴权）
API_SECRET_KEY=

# 允许的来源域名（CORS配置）
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# 是否启用请求频率限制
ENABLE_RATE_LIMIT=false

# 每分钟最大请求次数
MAX_REQUESTS_PER_MINUTE=60

# ===================
# 开发调试配置
# ===================
# 是否启用调试模式
DEBUG=false

# 是否保存原始响应数据（用于调试）
SAVE_RAW_RESPONSES=false

# 原始数据保存路径
RAW_DATA_PATH=data/raw_responses

# ===================
# 备份配置
# ===================
# 是否启用自动备份
ENABLE_AUTO_BACKUP=false

# 备份间隔（小时）
BACKUP_INTERVAL=24

# 备份文件保存路径
BACKUP_PATH=data/backups

# 保留备份文件数量
BACKUP_RETENTION_COUNT=7
